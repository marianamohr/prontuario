# Imagem do job de lembrete (cron). Roda uma vez e encerra.
FROM golang:1.22-alpine AS builder
WORKDIR /app
ENV GOSUMDB=off
COPY go.mod go.sum* ./
RUN go mod download 2>/dev/null || true
COPY . .
RUN go mod tidy && CGO_ENABLED=0 go build -o /reminder ./cmd/reminder

FROM alpine:3.19
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /reminder .
COPY migrations ./migrations
CMD ["./reminder"]
